<com.elorri.nestedfragments.views.ViewB xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C27B0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.elorri.nestedfragments.views.ViewB"
    android:orientation="vertical"
    android:gravity="center"
 >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment B"
        android:gravity="center"
        android:layout_weight="3"/>
    <TextView
        android:id="@+id/helloContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello !"
        android:gravity="center"
        android:layout_weight="2"/>
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:gravity="center"
        android:text="Fragment C"
        android:onClick="onSetFragmentCClicked"
        android:layout_weight="1"/>
</com.elorri.nestedfragments.views.ViewB>
